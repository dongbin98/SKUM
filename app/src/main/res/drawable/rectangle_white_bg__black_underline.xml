<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:top="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/gray"/>
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:top="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke
                android:width="1dp"
                android:color="@color/gray"/>
        </shape>
    </item>
</selector>